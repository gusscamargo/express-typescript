{
  "name": "template-typescript-express",
  "version": "1.2.0",
  "description": "Criação de um template para projetos Express utilizando TypeScript",
  "main": "app.ts",
  "repository": "https://github.com/thelostgus/express-typescript",
  "author": "Gustavo Michels de Camargo",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --inspect --transpile-only --ignore-watch node_modules ./app.ts",
    "clean": "rimraf dist/",
    "copy-views": "copyfiles -u 1 ./src/**/*.hbs dist/src",
    "copy-public": "copyfiles -u 1 ./public/**/* dist/public",
    "build": "yarn clean && tsc && yarn copy-views && yarn copy-public",
    "migrate": "yarn prisma migrate dev --name init"
  },
  "prisma": {
    "schema": "./src/models/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^4.1.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/copyfiles": "^2.4.1",
    "@types/express": "^4.17.13",
    "@types/express-handlebars": "^6.0.0",
    "@types/express-session": "^1.17.5",
    "@types/rimraf": "^3.0.2",
    "@types/uuid": "^8.3.4",
    "cookie-parser": "^1.4.6",
    "copyfiles": "^2.4.1",
    "dotenv": "^15.0.0",
    "express": "^4.17.2",
    "express-handlebars": "^6.0.6",
    "express-session": "^1.17.3",
    "path": "^0.12.7",
    "prisma": "^4.1.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5",
    "uuid": "^8.3.2"
  }
}
